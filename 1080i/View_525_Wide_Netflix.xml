                        <height>83</height>
                        <width>1000</width>
                        <left>240</left>
                        <font>Reg22</font>
                        <align>left</align>
                        <textoffsetx>10</textoffsetx>
                        <aligny>center</aligny>
                        <textcolor>$INFO[Skin.String(ViewDetailsTextColor)]</textcolor>
                        <!--<label>$VAR[HomeMenuWidgetInfoNetflixDetails]</label>-->
                        <label>$INFO[ListItem.Year,,    ]$INFO[ListItem.MPAA,,    ]$INFO[Window(Home).Property(SkinHelper.ListItem.Status),,]</label>
